@model IEnumerable<ABCretail2.Models.FileModel>

@{
    ViewData["Title"] = "List Files";
}

<h2>Files in Directory</h2>

@if (Model != null && Model.Any())
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Size (bytes)</th>
                <th>Last Modified</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var file in Model)
            {
                <tr>
                    <td>@file.Name</td>
                    <td>@file.Size</td>
                    <td>@file.LastModified</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No files found in the specified directory.</p>
}

<a href="@Url.Action("Upload", "File")" class="btn btn-primary">Upload a File</a>
