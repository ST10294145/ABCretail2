@{
    ViewData["Title"] = "Download File";
}

<h2>Download File</h2>

<form asp-action="Download" method="post">
    <div class="form-group">
        <label for="directoryName">Directory Name</label>
        <input type="text" name="directoryName" class="form-control" id="directoryName" required />
    </div>
    <div class="form-group">
        <label for="fileName">File Name</label>
        <input type="text" name="fileName" class="form-control" id="fileName" required />
    </div>
    <button type="submit" class="btn btn-primary">Download</button>
</form>

@if (ViewData.ModelState != null && !ViewData.ModelState.IsValid)
{
    <div class="text-danger">
        @Html.ValidationSummary()
    </div>
}
