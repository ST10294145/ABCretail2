@model IEnumerable<ABCretail2.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2>Product List</h2>

<a href="@Url.Action("Create", "Products")" class="btn btn-primary">Create New Product</a>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Edit", "Products", new { id = product.Id })" class="btn btn-sm btn-warning">Edit</a>
                    <a href="@Url.Action("Delete", "Products", new { id = product.Id })" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <p>No products available. Add some products to display.</p>
}
